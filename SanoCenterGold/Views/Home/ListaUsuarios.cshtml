@model UsuariosConRoles
@{
}

@if (Model != null)
{

    <div class="container-fluid">
        <table class="table table-striped table-dark">
            <thead style="text-align:center">
                <tr>
                    <td>
                        Usuarios
                    </td>
                    <td>
                        Centros
                    </td>
                    <td>
                        Localidad
                    </td>
                    <td>
                        Rol
                    </td>
                </tr>
            </thead>
            <tbody class="rankingtext">
                @foreach (var user in Model.Entrenadores)
                {
                    <tr>
                        <td>@string.Concat(user.Nombre, " ", user.Apellidos)</td>
                        <td>
                            @((ViewData["Gimnasios"] as List<SanoCenterGold.Models.Gimnasio>)
                            .Where(x => x.Id == user.IdGimnasio)
                            .Select(x => x.Nombre)
                            .FirstOrDefault())
                        </td>
                        <td>
                            @((ViewData["Gimnasios"] as List<SanoCenterGold.Models.Gimnasio>)
                                .Where(x => x.Id == user.IdGimnasio)
                                .Select(x => x.Localidad)
                                .FirstOrDefault())
                        </td>
                        <td>
                            Entrenador
                        </td>
                    </tr>
                }
                @foreach (var user in Model.Usuarios)
                {
                    <tr>
                        <td>@string.Concat(user.Nombre, " ", user.Apellidos)</td>
                        <td>
                            @((ViewData["Gimnasios"] as List<SanoCenterGold.Models.Gimnasio>)
                            .Where(x => x.Id == user.IdGimnasio)
                            .Select(x => x.Nombre)
                            .FirstOrDefault())
                        </td>
                        <td>
                            @((ViewData["Gimnasios"] as List<SanoCenterGold.Models.Gimnasio>)
                                .Where(x => x.Id == user.IdGimnasio)
                                .Select(x => x.Localidad)
                                .FirstOrDefault())
                        </td>
                        <td>
                            Usuario
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}